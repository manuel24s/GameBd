<div class="container">
    <div class="row">
        <div class="col-md-5 offset-md-3">
            <div class="card card-body bg-dark p-4 text-white rounded-0">
                <h1>GameData Editor</h1>
               <form action="/tasks/{{task._id}}/edit" method="POST">
                    <div class="mb-3">
                        <input type="text" name="title" placeholder="Title" value="{{task.title}}" class="form-control rounded-0 bg-dark text-white"/>
                    </div>
                    <div class="mb-3">
                        <textarea name="description" rows="3" placeholder="add a description" class="form-control rounded-0 bg-dark text-white" >{{task.description}}</textarea>
                    </div>
                    <div class="mb-3">
                        <textarea name="generos" rows="3" placeholder="add a generos" class="form-control rounded-0 bg-dark text-white">{{task.generos}}</textarea>
                    </div>
                    <div class="mb-3">
                        <textarea name="año" rows="3" placeholder="add a año" class="form-control rounded-0 bg-dark text-white">{{task.año}}</textarea>
                    </div>

                    
                    
                    

                 <button class="btn btn-primary">Editar</button>
    
                </form>
            </div>
        </div>
    </div>
</div>