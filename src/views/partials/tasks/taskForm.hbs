<div class="card card-body p-4 rounded-0 bg-dark text-white">
  <h3>Game-DB</h3>
  <form action= "/tasks/add" method="POST">

    <div>
      <label form="title">Titulo:</label>
      <input type="text" name="title" placeholder="title" id="title" class="form-control rounded-0 bg-dark text-white">
    </div>

    <div>
      <label form="description">Descripcion:</label>
      <textarea name="description" placeholder="Description" id="description" class="form-control rounded-0 bg-dark text-white"></textarea>

    </div>
    <div>
      <label form="generos">Genero:</label>
      <textarea name="generos" placeholder="Generos" id="generos" class="form-control rounded-0 bg-dark text-white"></textarea>
      

    </div>
    <div>
      <label form="año">Año de lanzamiento</label>
      <textarea name="año" placeholder="Año" id="año" class="form-control rounded-0 bg-dark text-white"></textarea>
      

    </div>

   <button class="btn btn-primary btn-sm mt-2">Ingresar</button>

  </form>

</div>